// background


body {
  background-image:url(../images/background.png);
  height:100%;
  width:100%;
  background-repeat:repeat-x;
  background-attachment:fixed;
  background-size:cover;
}



//文章内容透明化
.content-wrap {
  opacity: 0.85;
}

//侧边框透明度
.sidebar {
  opacity: 0.85;
}

//菜单栏透明度
.header-inner {
  background: rgba(255,255,255,0.85);
}

//搜索框透明度
.popup {
  opacity: 0.9;
}

//单行代码块颜色
code {
    color: #ff7600;
    background: #fbf7f8;
    margin: 2px;
}
